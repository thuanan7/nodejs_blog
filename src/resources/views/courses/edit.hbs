<div class="mt-4">
    <h3>Edit Khóa Học</h3>
    <form class="mt-4" method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" name="name" class="form-control" id="name" value="{{course.name}}">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea name="description" class="form-control" id="description">{{course.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoId">Video Id</label>
            <input type="text" name="videoId" class="form-control" id="videoId" value="{{course.videoId}}">
        </div>
        <div class="form-group">
            <label for="level">Level</label>
            <input type="text" name="level" class="form-control" id="level" value="{{course.level}}">
        </div>

        <button type="submit" class="btn btn-primary">Edit</button>
    </form>
</div>